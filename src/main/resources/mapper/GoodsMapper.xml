<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onlineorder.onlineordersystem.model.dao.GoodsMapper">
    <resultMap id="GoodsInfo" type="com.onlineorder.onlineordersystem.model.pojo.Goods">
        <id column="dish_id" jdbcType="INTEGER" property="dish_id" />
        <result column="dish_name" jdbcType="VARCHAR" property="dish_name" />
        <result column="dish_scale" jdbcType="VARCHAR" property="dish_scale" />
        <result column="path" jdbcType="VARCHAR" property="path" />
        <result column="price" jdbcType="DECIMAL" property="price" />
        <result column="mon_sale" jdbcType="INTEGER" property="mon_sale" />
        <result column="describe" jdbcType="VARCHAR" property="describe" />
    </resultMap>
<!--    获取所有菜品信息-->
    <select id="getGoodsInfo" resultMap="GoodsInfo">
        select * from dishes
    </select>

<!--    修改信息-->
    <update id="updateGoodsInfo" parameterType="com.onlineorder.onlineordersystem.model.pojo.Goods">
        update dishes
        <set>
            <if test="dish_name != null and dish_name != ''">
                dish_name = #{dish_name,jdbcType=VARCHAR},
            </if>
            <if test="dish_scale != null and dish_scale != ''">
                dish_scale = #{dish_scale,jdbcType=VARCHAR},
            </if>
            <if test="path != null and path != ''">
                path = #{path,jdbcType=VARCHAR},
            </if>
            <if test="price != null">
                price = #{price,jdbcType=DECIMAL},
            </if>
            <if test="mon_sale != null">
                mon_sale = #{mon_sale,jdbcType=VARCHAR},
            </if>
            <if test="describe != null and describe != ''">
                describe = #{describe,jdbcType=VARCHAR},
            </if>
        </set>
        where dish_id = #{dish_id,jdbcType=INTEGER}
    </update>

<!--    删除功能-->
    <delete id="deleteGoods" parameterType="java.lang.Integer">
        DELETE FROM dishes
        WHERE dish_id = #{dish_id,jdbcType=INTEGER}
    </delete>
</mapper>